.components{
    width 100%
    display: flex
}
.components__body{
    display: flex
    flex: 0 1 80%
    border-top-left-radius 5px
    border-bottom-left-radius 5px
    -webkit-box-shadow: 5px -2px 10px 0px #878B90;
    -moz-box-shadow:    5px -2px 10px 0px #878B90;
    box-shadow:         5px -2px 10px 0px #878B90;
}

.drop-down-travel__drop-body{
    position: absolute
    width: 360px
    margin: 60px 10px 0px 10px
} 

.component__element{
    display: block
} 

.component__left{
    margin: 5px 10px
    .component__title{
    font-style: normal
    font-weight: normal
    font-size: 12px
    line-height: 20px
    color: #878B90
} 

.component__text{
    font-style: normal
    font-weight: normal
    font-size: 16px
    line-height: 26px
    color: #2C3136
    } 
    
    }

.component__right{
    display: block
    margin: auto 20px

    .component__button{
        background-color: #fff
        }
}

&.components__block{
    display: inline-flex
    justify-content: space-between
    border-right: 1px solid  #E5E8EB
    }

&.country{
    flex: 0 1 30%
    }
&.date{
    flex: 0 1 30%
    }
&.nights{
    flex: 0 1 20%
    }
&.humans{
    flex: 0 1 30%
    border-right: none
    }

.components__block-button{
    flex: 0 1 20%
}


.components__button{
    -webkit-box-shadow: 7px -2px 10px 0px #878B90;
    -moz-box-shadow:    7px -2px 10px 0px #878B90;
    box-shadow:         7px -2px 10px 0px #878B90;
    height 100%
    width 100%
}






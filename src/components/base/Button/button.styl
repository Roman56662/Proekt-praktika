.button{
  font-weight: 600
  font-size: 14px
}

.button_primary{
  border-radius: 5px
  width: 138px
  height 50px
}

.button_transparent{
  border 2px solid #000014
  background: rgba(0,0,0,0)
  & p{
      color #000014
    }
}
// !!!!!!!!!!!!!!!!!!!!!!!!!!!
.button_secondary{
  width: 158px
  height 60px
}

.button_gradient_radius-right {
  border none
  border-top-right-radius: 5px
  border-bottom-right-radius: 5px
  background: linear-gradient(95.18deg, #20CE83 5.97%, #13BCE1 157.12%)

  & p{
      color #fff
    }
} 



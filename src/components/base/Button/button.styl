.Button{
  font-weight: 600
  font-size: 14px
  width 300px
  height 100%
  & p{
    color #000
  }
  &_theme{
    &_primary{
      border-radius: 5px
      width: 138px
      height 50px
      & ^[0]__class {
      }
    }
    &__button_yellow{
      border: none
      background: #FFF45F
      border-radius: 5px
      opacity: 1
      box-shadow: none
    &:hover{ 
      transform: translateY(-3px)
      box-shadow: 0 3px 5px #878B90
    }
    &:active{
      transform: translateY(-1px)
      box-shadow: none
    }
    }
    &__button_yellow_bordered{
      border: none
      background: #FFF45F
      border-top-right-radius: 5px
      border-bottom-right-radius: 5px
    
    &:hover{ 
      transform: translateX(-3px)
      box-shadow: 0 3px 5px #878B90
    }
    &:active{
      transform: translatex(-1px)
      box-shadow: none
    }
    }
    }
  }




.button_third{
  width 88px
  height 32px
  border-radius: 5px
}

.button_gradient-border{
  background: linear-gradient(#F7F9FA,#F7F9FA) padding-box, /*this is your grey background*/
  linear-gradient(95.18deg, #20CE83 5.97%, #13BCE1 157.12%) border-box
  border: 2px solid transparent
  border-radius: 5px
  color: linear-gradient(95.18deg, #20CE83 5.97%, #13BCE1 157.12%)

  & p{
    background-image: -webkit-linear-gradient(95.18deg, #20CE83 5.97%, #13BCE1 157.12%) /* For Chrome and Safari */
    background-image:    -moz-linear-gradient(95.18deg, #20CE83 5.97%, #13BCE1 157.12%) /* For old Fx (3.6 to 15) */
    background-image:     -ms-linear-gradient(95.18deg, #20CE83 5.97%, #13BCE1 157.12%) /* For pre-releases of IE 10*/
    background-image:      -o-linear-gradient(95.18deg, #20CE83 5.97%, #13BCE1 157.12%) /* For old Opera (11.1 to 12.0) */
    background-image:         linear-gradient(95.18deg, #20CE83 5.97%, #13BCE1 157.12%) /* Standard syntax; must be last */
    color:transparent
    -webkit-background-clip: text
  }
}


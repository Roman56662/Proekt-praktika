/*** --- Reset CSS --- ***/
@import 'reset.styl'

/*** --- Box sizing --- ***/
*, *:before, *:after {
  box-sizing border-box
}

/*** --- Fonts --- ***/
// webfont('Bebas', 'BebasNeue-Regular')
// webfont('Bebas', 'BebasNeue-Bold', bold)

/*** --- Document --- ***/
html,
body {
  height 100%
  background $bgColor
  color $textColor
  font normal $fontSize/$lineHeight $fontFamily
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
}

/*** --- Links --- ***/
a {
  color $linkColor
  text-decoration none
}